{
  "name": "ramune",
  "description": "Watch anime together with your friends.",
  "license": "MIT",
  "version": "1.8.1",
  "scripts": {
    "lint:js": "eslint ./src/**/*.{js,ts,vue}",
    "lint:css": "stylelint ./src/**/*.{css,scss,vue}",
    "lint": "npm run lint:js && npm run lint:css",
    "build": "vue-tsc --noEmit && vite build && npm run minify-libass",
    "minify-libass": "esbuild ./public/libass/subtitles-octopus-worker-legacy.js ./public/libass/subtitles-octopus-worker.js ./public/libass/subtitles-octopus.js --minify --outdir=dist/libass/",
    "dev": "vite",
    "serve": "vite preview"
  },
  "browserslist": [
    "last 4 versions"
  ],
  "dependencies": {
    "axios": "^0.25.0",
    "fuzzaldrin": "^2.1.0",
    "gizmo-api": "^1.1.1",
    "socket.io-client": "^4.3.1",
    "vite-ssr": "^0.15.0",
    "vue": "^3.2.30",
    "vue-router": "^4.0.12",
    "vue-socket.io-extended": "^5.0.0-alpha.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@gizmo-dev/eslint-config": "^1.0.28",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
    "@types/connect": "^3.4.35",
    "@types/fuzzaldrin": "^2.1.4",
    "@types/node": "^14.18.11",
    "@types/svgo": "^2.6.1",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vitejs/plugin-vue": "^2.1.0",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.21",
    "eslint": "^8.8.0",
    "eslint-plugin-vue": "^8.4.1",
    "postcss": "^8.4.6",
    "postcss-calc": "^8.2.4",
    "postcss-reporter": "^7.0.5",
    "postcss-scss": "^4.0.3",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.49.7",
    "stylelint": "^14.5.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vite-svg-loader": "^3.1.2",
    "vue-eslint-parser": "^8.2.0",
    "vue-tsc": "^0.31.2"
  }
}
