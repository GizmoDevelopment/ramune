{
  "name": "ramune",
  "description": "Watch anime together with your friends.",
  "license": "MIT",
  "version": "1.8.4",
  "scripts": {
    "lint:js": "eslint ./src/**/*.{js,ts,vue}",
    "lint:css": "stylelint ./src/**/*.{css,scss,vue}",
    "lint": "npm run lint:js && npm run lint:css",
    "build": "vue-tsc --noEmit && vite build && npm run minify-libass",
    "minify-libass": "esbuild ./public/libass/subtitles-octopus-worker-legacy.js ./public/libass/subtitles-octopus-worker.js ./public/libass/subtitles-octopus.js --minify --outdir=dist/libass/",
    "dev": "vite",
    "serve": "vite preview"
  },
  "browserslist": [
    "last 5 versions"
  ],
  "dependencies": {
    "@vueuse/head": "^0.7.6",
    "axios": "^0.27.2",
    "fuzzaldrin": "^2.1.0",
    "gizmo-api": "^1.1.2",
    "socket.io-client": "^4.5.1",
    "vite-ssr": "^0.16.0",
    "vue": "^3.2.36",
    "vue-router": "^4.0.15",
    "vue-socket.io-extended": "^5.0.0-alpha.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@gizmo-dev/eslint-config": "^1.0.29",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
    "@types/connect": "^3.4.35",
    "@types/fuzzaldrin": "^2.1.4",
    "@types/node": "^14.18.12",
    "@types/svgo": "^2.6.3",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "autoprefixer": "^10.4.7",
    "esbuild": "^0.14.41",
    "eslint": "^8.16.0",
    "eslint-plugin-vue": "^8.6.0",
    "postcss": "^8.4.14",
    "postcss-calc": "^8.2.4",
    "postcss-reporter": "^7.0.5",
    "postcss-scss": "^4.0.4",
    "rollup-plugin-visualizer": "^5.6.0",
    "sass": "^1.52.1",
    "stylelint": "^14.8.5",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.7.2",
