{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types",
			"src/typings"
		],
		"baseUrl": "src",
		"paths": {
			"@typings/*": ["typings/*"],
			"@views/*": ["views/*"],
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@assets/*": ["assets/*"],
			"@mixins/*": ["mixins/*"],
			"@renderers/*": ["renderers/*"],
			"@styles/*": ["styles/*"],
			"@stores/*": ["stores/*"],
			"@factories/*": ["factories/*"],
			"@directives/*": ["directives/*"],
			"@plugins/*": ["plugins/*"]
		},
		"plugins": [
			{ "name": "@vuedx/typescript-plugin-vue" }
		]
	},
	"include": [
		"*.config.js",
		"*.config.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue"
	]
}
