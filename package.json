{
  "name": "ramune",
  "description": "Watch anime together with your friends.",
  "license": "MIT",
  "version": "1.6.1",
  "scripts": {
    "lint:js": "eslint ./src/**/*.{js,ts,vue}",
    "lint:css": "stylelint ./src/**/*.{css,scss,vue} --syntax scss",
    "lint": "npm run lint:js && npm run lint:css",
    "build": "vue-tsc --noEmit && vite build && npm run minify-libass",
    "minify-libass": "esbuild ./public/libass/subtitles-octopus-worker-legacy.js ./public/libass/subtitles-octopus-worker.js ./public/libass/subtitles-octopus.js --minify --outdir=dist/libass/",
    "dev": "vite",
    "serve": "vite preview"
  },
  "browserslist": [
	"last 4 versions"
  ],
  "dependencies": {
    "gizmo-api": "^1.1.0",
    "socket.io-client": "^4.2.0",
    "vue": "^3.2.19",
    "vue-router": "^4.0.11",
    "vue-socket.io-extended": "^5.0.0-alpha.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@gizmo-dev/eslint-config": "^1.0.25",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
    "@types/node": "^14.17.21",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "autoprefixer": "^10.3.7",
    "esbuild": "^0.13.3",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.19.0",
    "postcss": "^8.3.9",
    "postcss-calc": "^8.0.0",
    "postcss-reporter": "^7.0.3",
    "sass": "^1.42.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-scss": "^3.21.0",
    "typescript": "^4.4.3",
    "vite": "^2.6.2",
    "vite-svg-loader": "^2.2.0",
    "vue-eslint-parser": "^7.11.0",
    "vue-tsc": "^0.3.0"
  }
}
