{
  "name": "ramune",
  "description": "Watch anime together with your friends.",
  "license": "MIT",
  "version": "1.5.1",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && npm run minify-libass",
	"minify-libass": "esbuild ./public/libass/subtitles-octopus-worker-legacy.js ./public/libass/subtitles-octopus-worker.js ./public/libass/subtitles-octopus.js --minify --outdir=dist/libass/",
    "serve": "vite preview",
    "lint": "eslint src/**/*.{js,ts,vue}"
  },
  "dependencies": {
    "gizmo-api": "^1.1.0",
    "socket.io-client": "^4.2.0",
    "vue": "^3.2.11",
    "vue-router": "^4.0.11",
    "vue-socket.io-extended": "^5.0.0-alpha.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@gizmo-dev/eslint-config": "^1.0.22",
    "@types/node": "^14.17.15",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vitejs/plugin-vue": "^1.6.2",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "esbuild": "^0.12.25",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.17.0",
    "sass": "^1.39.0",
    "typescript": "^4.3.5",
    "vite": "^2.5.6",
    "vite-svg-loader": "^2.2.0",
    "vue-eslint-parser": "^7.11.0",
    "vue-tsc": "^0.3.0"
  }
}
