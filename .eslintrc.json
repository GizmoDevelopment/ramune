{
	"root": true,
	"extends": [
		"@nuxtjs/eslint-config-typescript",
		"plugin:nuxt/recommended",
		"plugin:@gizmo-dev/typescript",
		"plugin:@gizmo-dev/vue"
	],
	"env": {
		"browser": true,
		"es2021": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"parser": "@typescript-eslint/parser",
		"sourceType": "module",
		"project": [ "./tsconfig.json" ],
		"extraFileExtensions": [ ".vue" ]
	},
	"plugins": [
		"nuxt",
		"vue",
		"@typescript-eslint"
	],
	"globals": {
		"$fetch": true,
		"$nuxt": true
	}
}